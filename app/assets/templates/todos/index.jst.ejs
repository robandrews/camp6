<div class="modal fade" id="addTodo" tabindex="-1" role="dialog" aria-labelledby="addTodoLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="addTodoLabel">Add Todo</h4>
      </div>
      <div class="modal-body">
      <form>
        <label>Todo Title:<input type="text"></label>
        <label>Due Date:<input type="date"></label>
      </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>


<button class="add-todo-list btn-sm">Add Todo List</button>

<% todos.each(function(todo_list){ %>  
  <div class='todo-list' data-id='<%=todo_list.id%>'>
    <a href="#todo-lists/<%=todo_list.id%>"<h5><%=todo_list.escape("title")%></h5></a>
    <ul>
      <%todo_list.todos().each(function(todo){ %>
        <li class="todo-li" data-list-id="<%=todo_list.id%>" data-id="<%= todo.id %>"> <input type="checkbox" class="todo" data-id="<%= todo.get('id') %>" 
                      <%if(todo.get("completed")){%> CHECKED<%}%>> 
            <%=todo.escape("title")%>  </input> <a class="index-todo">Edit</a></li>
      <% }) %>
    </ul>
    <div class='new-todo-input'></div>  
    <button class="add-single-todo btn-xs" data-id="<%= todo_list.id %>">Add todo</button>
  </div>
<% }) %>