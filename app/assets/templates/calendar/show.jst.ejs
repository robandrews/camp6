<%window.project_id = project.id%>


<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1" id="calendar-body">
    <h4><%=project.escape("title")%></h4>
      <div id='calendar'></div>
    </div>
  </div>
</div>

<a href="#">Back to <%= project.escape("title") %> </a>



<script>
    $('#calendar').fullCalendar({
			header: {
				left: 'prev,next today',
				center: 'title'
			},
			defaultDate: '2014-03-12',
			selectable: true,
			selectHelper: true,
			select: function(start, end, jsEvent) {},
			editable: true,
			events: "/projects/" + window.project_id + "/calendar",
      unselectAuto: true
		});
  })
</script>